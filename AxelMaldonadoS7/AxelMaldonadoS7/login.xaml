<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AxelMaldonadoS7.login">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Ventana de Login" FontSize="Medium" FontAttributes="Bold" HorizontalTextAlignment="Center" />

            <Label />
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario" HorizontalTextAlignment="Center" Keyboard="Email" />
            <Entry x:Name="txtContrasenia" Placeholder="Ingrese la contraseña" IsPassword="True" HorizontalTextAlignment="Center" />

            <Button x:Name="btnIniciar" Text="Iniciar" Clicked="btnIniciar_Clicked" BackgroundColor="DarkCyan" TextColor="White" />
            <Button x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>