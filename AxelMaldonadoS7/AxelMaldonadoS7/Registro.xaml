<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AxelMaldonadoS7.Registro">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Ventana de Registro" FontSize="Medium" FontAttributes="Bold" HorizontalTextAlignment="Center" />

            <Label />
            <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre" HorizontalTextAlignment="Center" />
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario" HorizontalTextAlignment="Center" Keyboard="Email" />
            <Entry x:Name="txtContasenia" Placeholder="Ingrese la contraseña" IsPassword="True" HorizontalTextAlignment="Center" />

            <Button x:Name="btnAgregar" Text="Agregar" Clicked="btnAgregar_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>